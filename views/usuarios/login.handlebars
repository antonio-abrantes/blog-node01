{{#if error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
{{else}}
{{/if}}
<h3>Login:</h3>
<div class="card">
<div class="card-body">
        <form action="/usuarios/login" method="post">

        <label for="email">E-mail:</label>
        <input value="{{usuario.email}}" class="form-control" type="email" id="email" name="email" placeholder="E-mail do usuário">

        <label for="senha">Senha:</label>
        <input class="form-control" type="password" id="senha" name="senha" placeholder="Senha do usuário" required>

        <br>
        <button type="submit" class="btn btn-success">Entrar</button>
    </form>
    <hr>
    <p class="text-center">
      Caso já seja cadatrado, <a href="/usuarios/login">faça login aqui!</a>
    </p>
</div>
</div>