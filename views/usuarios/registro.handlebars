{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}
{{/each}}
<h3>Nova conta</h3>
<div class="card">
<div class="card-body">
        <form action="/usuarios/registro" method="post">
        <label for="nome">Nome:</label>
        <input value="{{usuario.nome}}" class="form-control" type="text" id="nome" name="nome" placeholder="Nome do usuário">

        <label for="email">E-mail:</label>
        <input value="{{usuario.email}}" class="form-control" type="email" id="email" name="email" placeholder="E-mail do usuário">

        <label for="senha">Senha:</label>
        <input class="form-control" type="password" id="senha" name="senha" placeholder="Senha do usuário" required>

        <label for="senha2">Repita sua senha:</label>
        <input class="form-control" type="password" id="senha2" name="senha2" placeholder="Senha" required>

        <br>
        <button type="submit" class="btn btn-success">Criar conta</button>
    </form>
</div>
</div>