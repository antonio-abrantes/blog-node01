<h2>Lista de postagens:</h2>
<hr>
<a class="btn btn-success" href="/admin/postagens/add" style="margin-bottom: 10px;">
    Nova postagem
</a>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.titulo}}</h4>
            <p style="text-align: justify;">
              {{this.conteudo}}
            </p>  
            <small class="badge badge-secondary">{{this.slug}}</small>  <br>
            <small>Criação: {{this.data}}</small><br>
            <a href="/admin/postagens/edit/{{this._id}}">
                <button class="btn btn-success mt-2">Editar postagem</button>
            </a>
            <form action="/admin/postagens/deletar" method="POST">
                <div class="form-group">
                    <input type="hidden" name="id" value="{{this._id}}">
                    <button type="submit" class="btn btn-danger mt-4" >Deletar</button>
                </div>
            </form>
        </div>
    </div>    
{{else}}
    <h4 class="mt-3">Sem postagens para listar!</h4>
{{/each}}