<h2>Lista de categorias:</h2>
<hr>
<a class="btn btn-success" href="/admin/categorias/add" style="margin-bottom: 10px;">
    Nova categoria
</a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.nome}}</h4>  
            <small>{{this.slug}}</small>  <br>
            <small>Criação: {{this.date}}</small><br>
            <a href="/admin/categorias/edit/{{this._id}}">
                <button class="btn btn-success mt-2">Editar categoria</button>
            </a>
            <form action="/admin/categorias/deletar" method="POST">
                <div class="form-group">
                    <input type="hidden" name="id" value="{{this._id}}">
                    <button type="submit" class="btn btn-danger mt-4" >Deletar</button>
                </div>
            </form>
        </div>
    </div>    
{{else}}
    <h4 class="mt-3">Sem registros para listar!</h4>
{{/each}}